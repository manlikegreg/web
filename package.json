{
  "name": "science-1b-website",
  "version": "1.0.0",
  "description": "Science 1B - St. John's Grammar SHS, Achimota - Class Magazine Website",
  "private": true,
  "workspaces": [
    "frontend",
    "backend-prisma"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend-prisma && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend-prisma && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend-prisma && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend-prisma && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend-prisma && npm run format",
    "setup": "npm run setup:dev",
    "setup:dev": "chmod +x scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "setup:dev:win": "scripts/setup-dev.bat",
    "start:dev": "chmod +x scripts/start-dev.sh && ./scripts/start-dev.sh",
    "start:dev:win": "scripts/start-dev.bat",
    "db:generate": "cd backend-prisma && npm run db:generate",
    "db:push": "cd backend-prisma && npm run db:push",
    "db:seed": "cd backend-prisma && npm run db:seed",
    "db:studio": "cd backend-prisma && npm run db:studio",
    "deploy:frontend": "cd frontend && npm run build && netlify deploy --prod --dir=frontend/out",
    "deploy:backend": "cd backend-prisma && git push origin main"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
